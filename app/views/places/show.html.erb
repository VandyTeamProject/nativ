<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>


<div class="booyah-box col-10 offset-1">
  <br />
  <h1><%= @place.name %></h1><br />
  <%=image_tag @place.image.url%>
    <br /><br />
  <p><%= @place.address %></p>
  <p><%= @place.phone_number %></p>
  <br/><br/>
  <p><%= @place.description %></p>

<!-- MAP CODE -->
<style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
    #map {
      height: 300px;
    }
   
  </style>

  <% if @place.latitude.present? && @place.longitude.present? %>

  <script>

    function initMap() {
      var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: myLatLng
      });

      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: 'Hello World!'
      });
    }
  </script>

  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_N7iYzDCAZBWGdF1p9Ka9-ohA6EzR0Z4&callback=initMap">
  </script>

<div id="map"></div>
<% end %>

<br />

  <div class="float-right">
    <% if current_user && current_user == @place.user %>
    <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
    <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this place?'}, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>

<div class="clear"></div>

<!-- Reviews Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
          <h4 class="modal-title" id="myModalLabel">Write a review</h4>
      </div>
      <%= simple_form_for @review, url: place_reviews_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :rating, as: :select, collection: Review::RATINGS %>
          <br/>
          <%= f.input :message %>
        </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          <%= f.submit "Write a Review", class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
</div>
<br/>
<br/>

<div class="col-10 offset-1">
<h1 class="float-left">Reviews</h1>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#reviewModal">
  Write a Review
</button>
</div>
<div class="clear"></div>
<div class="row">
<% @place.reviews.each do |review| %>
  <div class="booyah-box col-12 col-sm-8 offset-2">
    <blockquote>
      <% if review.humanized_rating.present? %>
     <b><%= review.humanized_rating %></b> -
      <% end %>
          <%= review.message %>
          
    </blockquote>
  </div>
<% end %>
</div>


<!-- Comments Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
          <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>
      <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
        </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
</div>
<br/>
<br/>


<div class="col-10 offset-1">
<h1 class="float-left">Comments</h1>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#myModal">
  Add a comment
</button>
</div>


<div class="clear"></div>
<div class="row">
<% @place.comments.each do |comment| %>
  <div class="booyah-box col-12 col-sm-8 offset-2">
    <blockquote>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>
</div>











